<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/movies_detail_card_view"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/movie_detail_image_movie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

<!--            <TextView-->
<!--                android:id="@+id/movie_detail_title_movie"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="tÃ­tulo"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="22dp"-->
<!--                android:fontFamily="serif-monospace" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/movie_detail_date_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="01/01/2000"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="14dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/movies_detail_card_view"
        app:layout_constraintStart_toStartOf="@id/movies_detail_card_view"
        app:layout_constraintEnd_toEndOf="@id/movies_detail_card_view"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>